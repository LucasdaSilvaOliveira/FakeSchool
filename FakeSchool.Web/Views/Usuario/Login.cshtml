@{
    ViewData["Title"] = "Página de Login";
}

<div>
    <div class="mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3>Formulário de Login</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Login" asp-controller="Usuario" method="post">
                            <div class="form-group">
                                <label for="UserName">Usuário:</label>
                                <input type="text" class="form-control" id="UserName" name="UserName" placeholder="Digite seu usuário">
                            </div>
                            <div class="form-group">
                                <label for="Senha">Senha:</label>
                                <input type="password" class="form-control" id="Senha" name="Senha" placeholder="Digite sua senha">
                            </div>
                            <div class="mt-3">
                                <a class="btn btn-secondary" asp-controller="Usuario" asp-action="Cadastro">Cadastre-se</a>
                                <button type="submit" class="btn btn-primary">Entrar</button>
                            </div>                          
                        </form>
                    </div>

                    @if(TempData["Sucesso"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Sucesso!</strong> @TempData["Sucesso"]
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>