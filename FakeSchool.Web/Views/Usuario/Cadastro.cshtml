@model UsuarioViewModel
@{
    ViewData["Title"] = "Cadastre-se!";
}

<div>
    <div class="mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3>Crie sua conta!</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" asp-controller="Usuario" method="post">
                            <div class="form-group">
                                <label for="UserName">Usuário:</label>
                                <input type="text" class="form-control" id="UserName" asp-for="UserName" placeholder="Digite seu usuário">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Senha">Senha:</label>
                                <input type="password" class="form-control" id="Senha" asp-for="Senha" placeholder="Digite sua senha">
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>
                            <div class="mt-3">
                                <a class="btn btn-secondary" asp-controller="Usuario" asp-action="Login">Já tem conta? Faça login!</a>
                                <button type="submit" class="btn btn-primary">Cadastrar</button>
                            </div>
                        </form>
                    </div>
                    @if(ViewData["Falha"] != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Erro!</strong> @ViewData["Falha"]
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>