@model FakeSchool.Web.Areas.Curso.Models.FormCursoViewModel

@{
    ViewData["Title"] = "Cadastro de curso";
}

<div class="mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Cadastro de Curso</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="Curso" method="post">
                        <div class="form-group">
                            <label for="Nome">Nome:</label>
                            <input type="text" class="form-control" id="Nome" asp-for="Nome" placeholder="Digite o nome do aluno">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label for="AnoLetivo">Duração do curso em anos:</label>
                            <input type="number" class="form-control" id="AnoLetivo" asp-for="DuracaoAnos" placeholder="Digite o tempo de duração do curso">
                            <span asp-validation-for="DuracaoAnos" class="text-danger"></span>
                        </div>
                        <div class="mt-3">
                            <a asp-controller="Curso" asp-action="Index" class="btn btn-sm btn-secondary">Voltar</a>
                            <button type="submit" class="btn btn-sm btn-primary">Cadastrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>