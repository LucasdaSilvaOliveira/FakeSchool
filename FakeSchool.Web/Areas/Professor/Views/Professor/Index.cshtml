@model List<FakeSchool.Web.Areas.Professor.Models.ProfessorViewModel>
@{
    ViewData["Title"] = "FakeSchool - Professores";
}


<div class="card">
    <div class="card-body">
        <a asp-controller="Professor" asp-action="Create" class="btn btn-sm btn-success mb-3">Cadastrar Professor</a>
        <table class="table table-primary table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="2" class="text-center text-secondary">
                            <i>
                                Sem professores cadastrados.
                            </i>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var curso in Model)
                    {
                        <tr>
                            <td>@curso.Nome</td>
                            <td>
                                <a asp-controller="Professor" asp-action="Edit" asp-route-id="@curso.Id" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-route-id="@curso.Id" class="btn btn-sm btn-danger">Remove</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>