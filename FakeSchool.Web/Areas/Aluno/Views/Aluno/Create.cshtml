@model FakeSchool.Web.Areas.Aluno.Models.FormAlunoViewModel

@{
    ViewData["Title"] = "Cadastro de aluno";
}

<div class="mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Cadastro de Aluno</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="Aluno" method="post">
                        <div class="form-group">
                            <label for="Nome">Nome:</label>
                            <input type="text" class="form-control" id="Nome" asp-for="Nome" placeholder="Digite o nome do aluno">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label>Curso:</label>
                            @Html.DropDownList("CursoId", (List<SelectListItem>)ViewBag.Cursos, "Selecione um item", new { @class = "form-control" })
                        </div>
                        <div class="form-group mt-3">
                            <label for="AnoLetivo">Ano Letivo:</label>
                            <input type="number" class="form-control" id="AnoLetivo" asp-for="AnoLetivo" placeholder="Digite o ano letivo">
                            <span asp-validation-for="AnoLetivo" class="text-danger"></span>
                        </div>
                        <div class="mt-3">
                            <a asp-controller="Aluno" asp-action="Index" class="btn btn-sm btn-secondary">Voltar</a>
                            <button type="submit" class="btn btn-sm btn-primary">Cadastrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>